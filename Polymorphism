class Bird:
    def make_sound(self):
        print("Birds chirp ğŸ¶")

class Dog:
    def make_sound(self):
        print("Dogs bark ğŸ¶")

class Cat:
    def make_sound(self):
        print("Cats meow ğŸ±")

# ---------------- Main ----------------
animals = [Bird(), Dog(), Cat()]

# Polymorphism: same method call works differently
for animal in animals:
    animal.make_sound()


