class Bird:
    def make_sound(self):
        print("Birds chirp 🎶")

class Dog:
    def make_sound(self):
        print("Dogs bark 🐶")

class Cat:
    def make_sound(self):
        print("Cats meow 🐱")

# ---------------- Main ----------------
animals = [Bird(), Dog(), Cat()]

# Polymorphism: same method call works differently
for animal in animals:
    animal.make_sound()


✅ Output:
Birds chirp 🎶
Dogs bark 🐶
Cats meow 🐱
